<div class="lessons-back">
  <div class="lessons-container">
    <h2 class="form-heading">Booking Trial lesson</h2>
      <div class="form">
        <div class="form-body">
            <p>Teacher: <%= @lesson.teacher_name %></p>
            <p>Student: <%= @current_user.name %></p>
            <p>Course: Trial</p>
            <p>Start time: <%= @lesson.start_time.strftime("%d/%m/%Y %H:%M (#{@current_user.time_zone} %:z)") %> ~ </p>
            <%= link_to("Booking", "/lessons/#{@lesson.id}/trial_booked", {method: :post, data: {confirm: "Are you sure you wanted to this lesson? Please confirm time/date again. If this lesson is that you want to take, please press [OK] "}, class: "booking-input"} ) %>
        </div>
      </div>
    <div class="form lessons-form">
      <%= link_to("<<back", "/lessons/trial") %>
    </div>
  </div>
</div>